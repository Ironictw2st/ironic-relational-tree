<div class="category-selector">
  <div class="category-header">
    <h2><i class="fas fa-sitemap"></i> Relational Trees</h2>
    <p class="category-subtitle">Select a category to view or create relationship trees</p>
  </div>
  
  <div class="category-grid">
    {{#each categories}}
    <button class="category-button" data-category="{{this.id}}">
      <div class="category-icon">
        <i class="{{this.icon}}"></i>
      </div>
      <div class="category-info">
        <span class="category-name">{{this.name}}</span>
      </div>
    </button>
    {{/each}}
  </div>
</div>

