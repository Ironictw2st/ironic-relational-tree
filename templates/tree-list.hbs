<div class="tree-list">
  <div class="tree-list-header">
    <button class="back-button">
      <i class="fas fa-arrow-left"></i>
      <span>Back</span>
    </button>
    <h2>{{categoryName}}</h2>
    <button class="create-tree">
      <i class="fas fa-plus"></i>
      <span>New Tree</span>
    </button>
  </div>

  <div class="tree-items">
    {{#each trees}}
    <div class="tree-item" data-tree-id="{{this.id}}">
      <div class="tree-item-info">
        <i class="fas fa-project-diagram tree-item-icon"></i>
        <div class="tree-item-details">
          <span class="tree-name">{{this.name}}</span>
          <span class="tree-meta">{{this.nodeCount}} characters Â· {{this.connectionCount}} connections</span>
        </div>
      </div>
      <div class="tree-item-actions">
        <button class="edit-tree" title="Rename">
          <i class="fas fa-edit"></i>
        </button>
        <button class="delete-tree" title="Delete">
          <i class="fas fa-trash"></i>
        </button>
      </div>
    </div>
    {{else}}
    <div class="no-trees">
      <i class="fas fa-folder-open"></i>
      <p>No trees created yet</p>
      <span>Click "New Tree" to get started</span>
    </div>
    {{/each}}
  </div>
</div>

